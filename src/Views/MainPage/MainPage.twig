{% set menuStoreData = [
    {'title': 'Perfumery', 'path': BASE_URL ~ 'category/all'},
    {'title': 'Women\'s perfumery', 'path': BASE_URL ~ 'category/woman'},
    {'title': 'Men\'s perfumery', 'path': BASE_URL ~ 'category/man'},
    {'title': 'Unisex perfume', 'path': BASE_URL ~ 'category/unisex'},
    {'title': 'Elite perfumery', 'path': BASE_URL ~ 'category/elite'},
    {'title': 'Nicheva perfumery', 'path': BASE_URL ~ 'category/nisheva'},
    {'title': 'Natural perfumery', 'path': BASE_URL ~ 'category/natural'}
] %}

{% extends "Layout/PublicLayout.twig" %}
{% block content %}
	<div class='mainPage'>
		<nav class='menuStore'>
			<ul class='mainMenu'>
				{% for li in menuStoreData %}
					<li class='menuLi'>
						<a href={{li.path}}>
							{{li.title}}
						</a>
					</li>
				{% endfor %}
			</ul>
		</nav>
		<div class='carousel'>
			<img src='/make-up/src/Public/Img/bcgimg.jpeg'/>
		</div>

		<div classname={'storeHome'}>
			<div key={category.name}>
				<div classname='category'>
					<NavLink to={publicUrl + 'category/' + category.slug} onclick={resetSearchParams}>
						{category.name}
					</NavLink>
				</div>
				<div classname='products'>
					<NavLink to={publicUrl + 'product/' + product._id} key={product._id} classname={'product'}>
						<img src={product.image}/>
						<div classname={'info'}>
							<h1>{product.title}</h1>
							<p>{product.price}$</p>
							<div onclick={basket.toggleBasketModal}>
								<button>
									Buy
								</button>
							</div>
						</div>
					</NavLink>
				</div>
			</div>
			{# <div classname='unexpected'>Unexpected error</div> #}
		</div>
	</div>
{% endblock %}
