{% extends "Layout/AuthLayout.twig" %}
{% block content %}
	<main class='container'>
		<form class='form' method="post">
			<img src='/make-up/src/Public/Img/bcgAuth.png'/>
			<span class='authTitle'>{{type}}</span>

			{% if type == 'register' %}
				<div class='block_input'>
					<span class='material-symbols-outlined'>signature</span>
					<div class='field_input'>
						<label>Name</label>
						<input autocomplete='off' id='name' type='text' label='Name' name='name' placeholder='Name...' value="{{ data.name }}"/>
					</div>
				</div>
			{% endif %}

			<div class='block_input'>
				<span class='material-symbols-outlined'>mail</span>

				<div class='field_input'>
					<label>{Email}</label>
					<input autocomplete='off' id='email' type='text' label='Email' name='email' placeholder='Email...' value="{{ data.email }}"/>
				</div>

			</div>

			<div class='block_input'>
				<span class='material-symbols-outlined'>lock</span>

				<div class='field_input'>
					<label>{{ label }}</label>
					<input autocomplete='off' id='password' type='password' label='Password' name='password' placeholder='Password...' value="{{ data.password }}"/>
				</div>
			</div>

			{% for validateErrors in error %}
				<div class='error'>{{validateErrors}}</div>
			{% endfor %}

			<button>Get Started</button>
		</form>
		<div class='bottom_link'>
			<a to=''>Create Account</a>
			<a to=''>Need help</a>
		</div>
	</main>
{% endblock %}
